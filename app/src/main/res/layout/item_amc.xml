<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
    android:layout_margin="2dp">

        <androidx.cardview.widget.CardView
            android:layout_margin="1dp"
            android:id="@+id/task_cv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="10dp"
            android:elevation="8dp"
            android:background="@color/white"
            android:foreground="?android:attr/selectableItemBackground"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <LinearLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center">
                    <TextView

                        android:clickable="false"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/tv_calltype"
                        android:textColor="@color/apptextcolor"
                        android:textStyle="bold"
                        android:textSize="23sp"
                        android:background="@drawable/image_shape"
                        android:gravity="center"
                        android:fontFamily="@font/roboto_regular"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:orientation="horizontal">

                            <TextView
                                android:saveEnabled="true"
                                android:visibility="gone"
                                android:clickable="false"
                                android:textColor="@color/black"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:gravity="start|center"
                                android:id="@+id/tv_servicetype"
                                android:layout_gravity="start|center"
                                android:layout_weight="3"

                                android:fontFamily="@font/roboto_bold"
                                android:textSize="14sp"/>

                            <TextView
                                android:saveEnabled="true"
                                android:clickable="false"
                                android:textSize="14sp"
                                android:textColor="@color/black"
                                android:gravity="start|center"
                                android:layout_gravity="start|center"
                                android:fontFamily="@font/roboto_medium"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="8"
                                android:id="@+id/tv_custname"
                                />

                            <TextView
                                android:clickable="false"
                                android:textColor="@color/apptextcolor"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:layout_gravity="end"
                                android:gravity="end"
                                android:layout_marginEnd="2dp"
                                android:id="@+id/tv_callbookdate"
                                android:fontFamily="@font/roboto_regular"
                                android:textSize="13sp"/>
                        </LinearLayout>



                    <LinearLayout
                        android:layout_marginTop="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:clickable="false"
                            android:layout_width="0dp"
                            android:layout_weight="5.5"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_ticketno"
                            android:fontFamily="@font/roboto_medium"
                            android:textSize="13.5sp"/>

                        <TextView
                            android:clickable="false"
                            android:layout_width="0dp"
                            android:layout_weight="3.5"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_rcnno"
                            android:fontFamily="@font/roboto_medium"
                            android:textSize="13.5sp"
                            android:layout_gravity="end"
                            android:gravity="end"/>

                        <ImageView
                            android:id="@+id/iv_call"
                            android:layout_weight="1"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="end"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:src="@drawable/phone_black_24dp"
                            />



                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/ll_altview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:clickable="false"
                            android:textColor="@color/black"
                            android:layout_width="0dp"
                            android:layout_weight="4"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_altno"
                            android:fontFamily="@font/roboto_medium"
                            android:textSize="13.5sp"/>

                        <ImageView
                            android:id="@+id/alt_iv_message"
                            android:layout_width="20dp"
                            android:layout_weight="1"
                            android:layout_height="20dp"
                            android:layout_gravity="start|center"
                            android:src="@drawable/ic_message_icon_rate"
                            android:background="?android:attr/selectableItemBackgroundBorderless"
                            />
                        <TextView
                            android:clickable="false"
                            android:textColor="@color/black"
                            android:layout_width="0dp"
                            android:layout_weight="5"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:textSize="13.5sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="3dp"
                        >

                        <TextView
                            android:layout_marginTop="1dp"
                            android:clickable="false"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:textSize="11sp"
                            android:fontFamily="@font/roboto_regular"
                            android:textColor="#AA000000"
                            android:id="@+id/tv_address"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="7"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:gravity="center">

                            <LinearLayout
                                android:visibility="gone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_gravity="center"
                                android:gravity="center">

                                <TextView
                                    android:clickable="false"
                                    android:layout_width="0dp"
                                    android:layout_weight="6"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/tv_status"
                                    android:layout_gravity="center"
                                    android:textColor="@color/common_blue_bg"
                                    android:fontFamily="@font/roboto_regular"
                                    android:textSize="14sp"/>

                                <TextView
                                    android:clickable="false"
                                    android:layout_width="0dp"
                                    android:layout_weight="4"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/tv_ageing"
                                    android:layout_gravity="left|center"
                                    android:gravity="left|center"
                                    android:textColor="@color/apptextcolor"
                                    android:fontFamily="@font/roboto_regular"
                                    android:textSize="14sp"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginTop="3dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/tv_modelname"
                                    android:layout_gravity="center"
                                    android:gravity="start|center"
                                    android:textSize="12sp"
                                    android:textAllCaps="false"
                                    android:textColor="@color/btn_login_twitter"/>
                            </LinearLayout>




                        </LinearLayout>



                    </LinearLayout>



                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_amc_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="15dp"
                android:layout_gravity="end"
                android:gravity="end"
                android:layout_marginBottom="3dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_error_outline_black_24dp"
                    android:layout_gravity="center"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:gravity="start|center"
                    android:text="AMC can not be puched due to serial no missing"
                    android:textColor="@color/apptextcolor"
                    android:textSize="10sp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"/>

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/iv_amc_image"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_camera_selected"
                    android:layout_gravity="center"/>


            </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>



    </LinearLayout>
