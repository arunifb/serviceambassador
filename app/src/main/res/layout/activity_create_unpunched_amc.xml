<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".amc.CreateUnpunchedAmc"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>


    <androidx.cardview.widget.CardView
        android:layout_margin="1dp"
        android:id="@+id/task_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        app:cardElevation="10dp"
        android:elevation="8dp"
        android:background="@color/white"
        android:foreground="?android:attr/selectableItemBackground"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center">
                    <TextView

                        android:clickable="false"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/tv_calltype"
                        android:textColor="@color/apptextcolor"
                        android:textStyle="bold"
                        android:textSize="23sp"
                        android:background="@drawable/image_shape"
                        android:gravity="center"
                        android:fontFamily="@font/roboto_regular"
                        android:text="A"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:saveEnabled="true"
                            android:clickable="false"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:gravity="start|center"
                            android:layout_gravity="start|center"
                            android:fontFamily="@font/roboto_medium"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="8"
                            android:id="@+id/tv_custname"
                            />

                        <TextView
                            android:clickable="false"
                            android:textColor="@color/apptextcolor"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:layout_gravity="end"
                            android:gravity="end"
                            android:layout_marginEnd="2dp"
                            android:id="@+id/tv_callbookdate"
                            android:fontFamily="@font/roboto_regular"
                            android:textSize="13sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_modelname"
                            android:layout_gravity="center"
                            android:gravity="start|center"
                            android:textSize="12sp"
                            android:textAllCaps="false"
                            android:textColor="@color/btn_login_twitter"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:layout_marginTop="1dp"
                            android:clickable="false"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:textSize="11sp"
                            android:fontFamily="@font/roboto_regular"
                            android:textColor="#AA000000"
                            android:id="@+id/tv_address"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:clickable="false"
                            android:layout_width="0dp"
                            android:layout_weight="5.5"
                            android:textColor="@color/black"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_ticketno"
                            android:fontFamily="@font/roboto_medium"
                            android:textSize="13.5sp"/>

                        <TextView
                            android:clickable="false"
                            android:textColor="@color/black"
                            android:layout_width="0dp"
                            android:layout_weight="3.5"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_rcnno"
                            android:fontFamily="@font/roboto_medium"
                            android:textSize="13.5sp"/>

                        <ImageView
                            android:id="@+id/iv_call"
                            android:layout_weight="1"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="end"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:src="@drawable/phone_black_24dp"
                            />



                    </LinearLayout>






                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Please Fill All The Details"
            android:textColor="@color/apptextcolor"
            android:layout_marginBottom="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <TextView
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_gravity="left|center"
                android:gravity="left|center"
                android:text="Serial No"/>

            <TextView

                android:textIsSelectable="true"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="30dp"
                android:id="@+id/tv_serial_no"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:background="@drawable/black_border"/>

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/btn_scan_serial_no"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                app:lottie_autoPlay="true"
                app:lottie_fileName="barcode_icon.json"
                app:lottie_loop="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <TextView
                android:textColor="@color/black"
                android:layout_height="30dp"
                android:layout_width="0dp"
                android:layout_weight="9"
                android:layout_gravity="start|center"
                android:gravity="start|center"
                android:text="Take Serial No Photo"/>



            <ImageView
                android:id="@+id/iv_take_photo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/ic_camera_selected"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/black_border"
            android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_sr_photo"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <TextView
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_gravity="start|center"
                android:gravity="start|center"
                android:text="ODU Serial No"/>

            <TextView
                android:textIsSelectable="true"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="30dp"
                android:id="@+id/tv_odu_serial_no"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginRight="10dp"/>

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/btn_scan_odu_no"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                app:lottie_autoPlay="true"
                app:lottie_fileName="barcode_icon.json"
                app:lottie_loop="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <TextView
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="9"
                android:layout_gravity="start|center"
                android:gravity="start|center"
                android:text="Take ODU Serial No Photo"/>



            <ImageView
                android:id="@+id/iv_take_odu_photo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/ic_camera_selected" />

        </LinearLayout>

    </LinearLayout>


    <Button
        android:onClick="submitdata"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Submit"
        android:textColor="@color/white"
        android:background="@color/apptextcolor"
        />


</LinearLayout>