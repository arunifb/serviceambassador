<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:background="@drawable/button_shape_white"
        android:layout_margin="15dp"
        >

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                >

                <LinearLayout
                    android:layout_margin="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:layout_width="0dp"
                        android:layout_weight="8"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:id="@+id/tv_item_stock_name"
                        android:layout_gravity="left|center"
                        android:gravity="left|center"
                        android:paddingLeft="10dp"

                        />


                    <TextView
                        android:textSize="9sp"
                        android:textColor="@color/apptextcolor"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:id="@+id/tv_item_reqdate"
                        android:layout_gravity="left|center"
                        android:gravity="left|center"
                        android:paddingLeft="10dp"

                        />


                    ProblemCategory

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center">


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:id="@+id/tv_item_stock_componemt"
                        android:layout_gravity="center"
                        android:gravity="left|center"
                        android:paddingLeft="10dp"
                        />


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.5"
                        android:text="Qty."
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/btn_login_twitter"
                        />


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.5"
                        android:text="Retn. Qty."
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/apptextcolor"
                        />







                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">



                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:id="@+id/tv_item_status"
                        android:layout_gravity="center"
                        android:gravity="left|center"
                        android:paddingLeft="10dp"
                        android:textColor="@color/black"
                        />


                    <TextView
                        android:id="@+id/tv_item_stock_qty"

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="2.5"
                        android:gravity="center"
                        android:textColor="@color/btn_login_twitter" />


                    <TextView
                        android:id="@+id/tv_item_stock_amount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.5"

                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/apptextcolor"
                        />



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:id="@+id/tv_item_remark"
                    android:layout_gravity="center"
                    android:gravity="left|center"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black"
                    />

                </LinearLayout>


            </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>