<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:textSize="13sp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:id="@+id/tv_item_productname"
            android:layout_gravity="left|center"
            android:gravity="left|center"
            android:paddingLeft="10dp"

            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/tv_item_code"
            android:layout_gravity="left|center"
            android:gravity="left|center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textSize="12sp"
            android:paddingLeft="10dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/red_border"
            android:dividerPadding="1dp"
            android:showDividers="middle"
            android:divider="@color/apptextcolor">




            <TextView

                android:textColor="@color/black"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:gravity="center"
                android:textSize="10sp"
                android:text="Base Price"/>

            <TextView
                android:textColor="@color/black"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="10sp"
                android:text="QTY."/>


            <TextView
                android:textColor="@color/black"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:gravity="center"
                android:textSize="10sp"
                android:text="Net Amount" />

            <TextView
                android:textColor="@color/black"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:gravity="center"
                android:textSize="10sp"
                android:text="Tax Amount" />


            <TextView
                android:textColor="@color/black"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="3"

                android:paddingLeft="5dp"
                android:gravity="center"
                android:paddingStart="3dp"
                android:textSize="10sp"
                android:text="Gross Amount"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:dividerPadding="1dp"
            android:showDividers="middle"
            android:divider="@color/apptextcolor">




            <TextView
                android:id="@+id/tv_item_baseprice"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tv_item_productunit"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_gravity="center"

                android:layout_weight="1"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@color/black" />


            <TextView
                android:id="@+id/tv_item_net_amount"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_gravity="center"

                android:layout_weight="2"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_item_taxamount"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@color/black" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="3"
                android:id="@+id/et_item_productrate"
                android:paddingLeft="5dp"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:paddingStart="3dp"
                />


        </LinearLayout>




    </LinearLayout>

</androidx.cardview.widget.CardView>