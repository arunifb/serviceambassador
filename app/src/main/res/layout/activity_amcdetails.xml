                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"/>



                <TextView
                    android:id="@+id/tv_icrno"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="left|center"
